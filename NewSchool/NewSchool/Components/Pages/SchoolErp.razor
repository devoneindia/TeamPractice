@page "/schoolerp"

<h3>SchoolErp</h3>

<div class="container">
    <div class="row">
        <div class="col-4"></div>
        <div class="col-4"></div>
        <div class="col-4">
            <button class="btn btn-primary" @onclick="AddTeacher">Add Teacher</button>

        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @if (Teachers == null || Teachers.Count() == 0)
            {
                <p><em>No Teacher Data Not Found</em></p>
            }
            else
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Class</th>
                            <th>Section</th>
                            <th>BloodGroup</th>
                            <th>Address</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var teacher in Teachers)
                        {
                            <tr>
                                <td>@teacher.name</td>
                                <td>@teacher.Class</td>
                                <td>@teacher.Section</td>
                                <td>@teacher.BloodGroup</td>
                                <td>@teacher.Address</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
    </div>
