@page "/prav-category"
@* @inject NavigationManager NavigationManager *@
@using HandlingDb.Models;
<h3>Categories</h3>

@* @code{
    private int selectedCategoryId;
    public void SelectCategory(int categoryId)
    {
        selectedCategoryId = categoryId;
        NavigationManager.NavigateTo($"/prav-sub-category/{selectedCategoryId}");
    }
} *@
<div class="container">
    <div class="row">
        <form>
        <div class="col-4">
                <InputNumber @bind-Value="PravCategoryValue.Id" />
       </div>
        <div class="col-4">
                <InputText placeholder="Enter Category" @bind-Value="PravCategoryValue.Name" />
        </div>
        <div class="col-4">
            <button class="btn btn-primary" @onclick="AddCategory">Add Category Name</button>
        </div>
        </form>
    </div>
    <div class="row">
        <div class="col-12">
            @if (PravCategories == null || PravCategories.Count() == 0)
            {
                <p><em>No Employees Found</em></p>
            }
            else
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>SubCategoryId</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in PravCategories)
                        {
                            <tr>
                                <td>@category.Id</td>
                                <td>@category.Name</td>
                                <button class="btn btn-primary">Select</button>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
