<div class="container">
    <div class="row">
        <div class="col-4">
            <div class="mb-3">
                <label class="form-label">SubCategory Name</label>
                <InputText @bind-Value="PravSubCategoryValues.Name" placeholder="Enter Sub-Category Name" />
            </div>
           
                <div class="mb-3">
                    <label class="form-label">Select your category:</label>
                <select @onchange="OnDropdownChange">
                    <option value="@PravSubCategoryValues.CategoryId">Select a value</option>
                        @foreach (var pcat in PravCategories)
                        {
                            <option value="@pcat.Id">@pcat.Name</option>
                        }
                    </select>
                </div>
              
           @*  <InputNumber @bind-Value=@selectedCategoryId /> *@
        </div>
        <div class="col-4">
            <button class="btn btn-primary" @onclick="AddSubCategory">Add Sub-category</button>

        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @if (PravSubCategories == null || PravSubCategories.Count() == 0)
            {
                <p><em>No Employees Found</em></p>
            }
            else
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Category Id</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in PravSubCategories)
                        {
                            <tr>
                                <td>@employee.Id</td>
                                <td>@employee.Name</td>
                                <td>@employee.CategoryId</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
